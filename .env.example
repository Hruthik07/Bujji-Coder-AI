# AI Coding Assistant - Environment Variables
# Copy this file to .env and fill in your API keys

# REQUIRED: OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# OPTIONAL: OpenAI Model Configuration
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7

# OPTIONAL: DeepSeek API Key (for code generation)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-coder

# OPTIONAL: Anthropic Claude API Key (for complex reasoning)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Hybrid Model Configuration
USE_HYBRID_MODELS=true
DEFAULT_PROVIDER=deepseek

# Workspace Configuration
WORKSPACE_PATH=.

# Server Configuration
PORT=8001

# RAG Settings
ENABLE_RAG=true
EMBEDDING_MODEL=text-embedding-3-small
VECTOR_DB_PATH=.vector_db
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RETRIEVAL=10

# Context Management Settings
MAX_CONTEXT_TOKENS=10000
MAX_CONTEXT_TOKENS_CLAUDE=150000
CONTEXT_SUMMARIZATION_THRESHOLD=0.75
PRESERVE_RECENT_MESSAGES=8
ENABLE_MEMORY_DB=true

# Assistant Settings
MAX_TOKENS=2000
MAX_FILE_SIZE=100000

# Performance Settings
ENABLE_CACHE=true
CACHE_TTL=604800
ENABLE_LOGGING=true
LOG_LEVEL=INFO
